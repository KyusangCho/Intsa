@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>This page allows you to download or delete that data.</p>
        <p>
            <strong class="text-danger">Deleting this data will permanently remove your account (Order, Voucher, Others), and this cannot be recovered.</strong>
        </p>
        <div class="d-flex">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary width-150 me-2" type="submit">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-default width-150">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}