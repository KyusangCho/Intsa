@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>INT, S.A.</title>
    <base href="~/" />
    <!-- ================== BEGIN core-css ================== -->
    <link href="_content/Syncfusion.Blazor/styles/bootstrap4.css" rel="stylesheet" />
    <link href="/templates/dashboard/assets/css/app.min.css" rel="stylesheet" />
    <!-- ================== END core-css ================== -->
</head>
<body data-spy='scroll' data-target='#sidebar-bootstrap' data-offset='200'>
    <!-- BEGIN #app -->
    <div id="app" class="app app-content-full-width app-content-full-height app-without-header">


        <!-- BEGIN login -->
        <div class="login">
            <!-- BEGIN login-content -->
            <div class="login-content">
                <form method="post">
                    <h2>Forgot your password?</h2>
                    <div class="text-muted mb-4">
                        Enter your email address.
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg fs-15px" placeholder="username@intsa.net" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg d-block w-100 fw-500 mb-3">Submit</button>
                    <div class="text-center text-muted">
                        Already have an ID? <a asp-page="./Login">Sign in</a>.
                    </div>
                </form>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login -->
    </div>
    <!-- END #app -->
    <!-- ================== BEGIN core-js ================== -->
    <script src="/templates/dashboard/assets/js/app.min.js"></script>
    <!-- ================== END core-js ================== -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>