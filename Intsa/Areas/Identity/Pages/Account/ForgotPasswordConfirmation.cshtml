@page
@model ForgotPasswordConfirmation
@{
    Layout = null;
    ViewData["Title"] = "Forgot password confirmation";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <base href="~/" />
    <!-- ================== BEGIN core-css ================== -->
    <link href="/css/bootstrap4.css" rel="stylesheet" />
    <link href="/templates/dashboard/assets/css/app.min.css" rel="stylesheet" />
    <!-- ================== END core-css ================== -->

</head>
<body>
    <!-- BEGIN #app -->
    <div id="app" class="app app-full-height app-without-header">

        <!-- BEGIN login -->
        <div class="login">
            <!-- BEGIN login-content -->
            <div class="login-content">
                <form method="post">
                    <h2>Forgot password confirmation</h2>
                    <div class="text-muted mb-4">
                        Please check your email to reset your password.
                    </div>
                    <div class="text-center text-muted">
                        Already have an Admin ID? <a asp-page="./Login">Sign in</a>.
                    </div>
                </form>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login -->
        <!-- BEGIN btn-scroll-top -->
        <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
        <!-- END btn-scroll-top -->
    </div>

    <!-- END #app -->
    <!-- ================== BEGIN core-js ================== -->
    <script src="/templates/dashboard/assets/js/app.min.js"></script>
    <!-- ================== END core-js ================== -->

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>