@if (IsShow)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@EditorFormTitle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Hide">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="Model" OnValidSubmit="CreateOrEditClick">
                        <DataAnnotationsValidator></DataAnnotationsValidator>
                        <ValidationSummary></ValidationSummary>
                        @if (Model.Id != 0)
                        {
                            <div class="form-group">
                                <label for="txtId">Id: @Model.Id</label>
                                <input type="hidden" @bind-value="@Model.Id" />
                            </div>
                        }

                        <div class="card-group">
                            <div class="card border-0 m-2">
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Department</b></label>
                                    <InputText id="txtName" class="form-control" placeholder=""
                                               @bind-Value="@Model.Name"></InputText>
                                    <ValidationMessage For="@(()=>Model.Name)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Team</b></label>
                                    <InputText id="txtTitle" class="form-control" placeholder=""
                                               @bind-Value="@Model.Title"></InputText>
                                    <ValidationMessage For="@(()=>Model.Title)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Create</b></label>
                                    <InputText id="txtName" class="form-control disabled" placeholder=""
                                               @bind-Value="@Model.Name"></InputText>
                                    <ValidationMessage For="@(()=>Model.Name)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                
                            </div>
                            <div class="card border-0 m-2">
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Handler</b></label>
                                    <InputText id="txtName" class="form-control" placeholder=""
                                               @bind-Value="@Model.Name"></InputText>
                                    <ValidationMessage For="@(()=>Model.Name)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Purpose of Use</b></label>
                                    <InputText id="txtName" class="form-control" placeholder=""
                                               @bind-Value="@Model.Name"></InputText>
                                    <ValidationMessage For="@(()=>Model.Name)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Delivery</b></label>
                                    <InputText id="txtName" class="form-control" placeholder=""
                                               @bind-Value="@Model.Name"></InputText>
                                    <ValidationMessage For="@(()=>Model.Name)" class="form-text text-muted"></ValidationMessage>
                                </div>
                            </div>
                            <div class="card border-0 m-2">
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Buyer</b></label>
                                    <InputSelect @bind-Value="@parentId" class="form-control" id="lstCategory">
                                        <option value="">-- Select --</option>
                                        @foreach (var p in parentIds)
                                            {
                                            <option value="@p">@p</option>
                                            }
                                    </InputSelect>
                                    <ValidationMessage For="@(()=> parentId)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Supplier</b></label>
                                    <InputSelect @bind-Value="@parentId" class="form-control" id="lstCategory">
                                        <option value="">-- Select --</option>
                                        @foreach (var p in parentIds)
                                            {
                                            <option value="@p">@p</option>
                                            }
                                    </InputSelect>
                                    <ValidationMessage For="@(()=> parentId)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Delivery Place</b></label>
                                    <InputSelect @bind-Value="@parentId" class="form-control" id="lstCategory">
                                        <option value="">-- Select --</option>
                                        @foreach (var p in parentIds)
                                            {
                                            <option value="@p">@p</option>
                                            }
                                    </InputSelect>
                                    <ValidationMessage For="@(()=> parentId)" class="form-text text-muted"></ValidationMessage>
                                </div>
                            </div>
                        </div>

                        <div class="rows">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="txtName" class="fs-12px text-muted mb-1"><b>Remark</b></label>
                                    <InputTextArea id="txtContent" class="form-control" placeholder="" rows="5"
                                                   @bind-Value="@Model.Content"></InputTextArea>
                                    <ValidationMessage For="@(()=>Model.Content)" class="form-text text-muted"></ValidationMessage>
                                </div>
                                <div class="form-group mt-2">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="button" class="btn btn-secondary" @onclick="Hide">Close</button>
                                </div>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

    </div>
}
else
{

}